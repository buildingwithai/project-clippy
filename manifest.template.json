{
  "manifest_version": 3,
  "name": "Project Clippy",
  "version": "0.1.0",
  "description": "Save & Reuse Snippets Instantly",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://buildingwithai.github.io/project-clippy/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://buildingwithai.github.io"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "windows": "Alt+Shift+V",
        "mac": "Alt+Shift+V",
        "linux": "Alt+Shift+V"
      },
      "description": "Open Clippy quick search"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/hotkey-listener.js"],
      "run_at": "document_start"
    }
  ]
}
